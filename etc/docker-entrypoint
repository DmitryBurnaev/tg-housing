#!/bin/sh


if [ "${APP_SERVICE}" = "bot" ]
  then
    cd /app && python src/main.py

elif [ "${APP_SERVICE}" = "test" ]
  then
    cd /app && \
    ruff check && \
    coverage run -m pytest && \
    coverage report

else
  echo "APP_SERVICE environment variable is unexpected or was not provided (APP_SERVICE='${APP_SERVICE}')" >&2
  kill -s SIGINT 1

fi
