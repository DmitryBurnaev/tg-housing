#!/bin/bash
set -e

export WORKING_DIR=/opt/tg-housing/

if [ "${DEPLOY_MODE}" != "CI" ]
  then
    echo "=== reading $(pwd)/.env file ==="
    export $(cat .env | grep -v ^# | xargs)
fi

echo "NEW DEPLOY"

echo "=== pulling image ${REGISTRY_URL}:${REGISTRY_SERVICE_TAG} ==="
docker pull ${REGISTRY_URL}:${REGISTRY_SERVICE_TAG}

echo "=== restarting service ==="
systemctl service tg-housing restart

echo "=== clearing ==="
echo y | docker image prune -a

echo "=== check status ==="
systemctl service tg-housing status
